{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@functions/*": [
        "src/functions/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@i18n": [
        "src/i18n/index.ts"
      ],
      "@locales/*": [
        "public/locales/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@icons/*": [
        "src/components/icons/*"
      ],
      "@styles/*": [
        "src/app/styles/*"
      ]
    }
  },
  "include": [
    "src",
    "build/types/**/*.ts",
    "src/app",
    "build/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
